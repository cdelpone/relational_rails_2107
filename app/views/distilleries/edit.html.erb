<h2>Edit <%= @distillery.name %></h2>

<%= form_with url: "/distilleries/#{@distillery.id}", :method => :patch, local: true do |f| %>
  <%= f.label :name, "Scotch Name:" %>
  <%= f.text_field :name, :placeholder => "#{@scotch.name}", :size => "30" %><br>
  <%= f.label :single_malt, "Single Malt?" %>
  <%= f.check_box :single_malt %>
  <%= f.label :year, "Year:" %>
  <%= f.text_field :year, :placeholder => "#{@scotch.year}", :size => "4" %><br><br>
  <%= f.submit "Update" %>
<% end %>
<%= f.label :single_malt, "True" %><br>
<%= f.check_box :single_malt, :value => 0, :unchecked => (@scotch.single_malt = false) %>
<%= f.label :single_malt, "False" %>


<form action="/distilleries/<%= @distillery.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <label for="distillery[name]">Distillery Name:</label>
  <input type="string" name="distillery[name]" value="<%= @distillery.name %>"/><br/>
  <label for="distillery[scotland_location]">Located in Scotland?</label>
  <input type="radio" id="true" name="distillery[scotland_location]" value="<%= @distillery.scotland_location %>"/>
  <label for="true">true</label>
  <input type="radio" id="false" name="distillery[scotland_location]" value="<%= @distillery.scotland_location %>"/>
  <label for="false">false</label><br/>
  <label for="established">Established In:</label>
  <input type="number" name="distillery[established]" size="4" value="<%= @distillery.established %>"/><br><br>
  <button type="submit">Submit</button>
</form>
