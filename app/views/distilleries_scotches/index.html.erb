<h2><%= @distillery.name %> Scotch Notes</h2>
<% @scotches.each do |scotch| %>
<h3><a href="/scotches/<%= scotch.id %>"><%= scotch.name %></a></h3>
  <p>Single Malt?: <%= scotch.single_malt %><br>
  Year: <%= scotch.year %><br>
  Distillery: <%= scotch.distillery.name %><br>
  Updated: <%= scotch.updated_at %><br>
  Created: <%= scotch.created_at %></p>
  <a href="/scotches/<%= scotch.id %>/edit">Update <%= scotch.name %></a><br>
  <%= link_to "Delete", "/scotches/#{scotch.id}", :method => :delete %><br>
<% end %><br>

<%= link_to "Sort Alphabetically", controller: :distilleries_scotches, :action => "index", :order => "alphabetical" %> <br>

<%= form_with url: "/distilleries/#{@distillery.id}/scotches", method: :get, local: true do |f| %>
<%= f.label "Give me scotches older than:" %>
<%= f.text_field :num, size: "4" %>
<%= f.submit 'Enter' %>
<% end %><br>

<a href="/distilleries/<%= @distillery.id %>/scotches/new">Create Scotch</a><br>
<a href="/distilleries/<%= @distillery.id %>">Return to <%= @distillery.name %> homepage</a>
